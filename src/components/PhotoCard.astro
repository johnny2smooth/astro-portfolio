---
export interface Props {
  title: string;
  location: string;
  date: string;
}
const { title, location, date } = Astro.props;
---

<div class="p-4 bg-slate-50 rounded-xl shadow-lg">
  <slot />
  <p class="text-lg font-bold text-slate-900">{title}</p>
  <div class="flex justify-between items-baseline">
    <p class="text-sm text-slate-800">{location}</p>
    <p class="text-xs font-light text-slate-800">{date}</p>
  </div>
</div>
